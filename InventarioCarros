        printf("2. Buscar carro por placa\n");
        printf("3. Buscar carro por cedula del due√±o\n");
        printf("4. Modificar carro\n");
        printf("5. Borrar carro\n");
        printf("6. Guardar en archivo\n");
        printf("7. Salir\n");
        printf("Ingrese una opcion: ");
        scanf("%d", &opcion);

        switch (opcion) {
            case 1:
                agregarCarro();
                break;
            case 2:
                buscarCarroPorPlaca();
                break;
            case 3:
                buscarCarroPorCedula();
                break;
            case 4:
                modificarCarro();
                break;
            case 5:
                borrarCarro();
                break;
            
            case 6:
                guardarEnArchivo();
                break;

            case 7:
                printf("Saliendo del programa.\n");
